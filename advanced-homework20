#include <stdio.h>
#include<stdlib.h>
#define f(a,b,c) (a+b+c)*(a-b-c)
/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int na,nb,nc,t;

int main(void) {
	printf("輸入a:\n");
	scanf("%d",&na);
	printf("輸入b:\n");
	scanf("%d",&nb);
	printf("輸入c:\n");
	scanf("%d",&nc);
	
	t=f(na,nb,nc);
	printf("(a+b+c)*(a-b-c)=%d",t);
	return 0;
}
